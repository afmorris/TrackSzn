@model TrackSzn.ViewModels.Lifts.EditViewModel

@{
    ViewBag.Title = $"Edit Lift | {Model.Lift.Name}";
    ViewBag.Description = "Use this page to edit the lift listed below.";
}

@using (Html.BeginForm("Edit", "Lifts", FormMethod.Post, new { }))
{
    @Html.AntiForgeryToken()
    if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Any())
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <h3 class="alert-heading">Whoops.</h3>
            @Html.ValidationSummary(false, string.Empty, new { @class = "m-0" })
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="form-group">
        @Html.LabelFor(x => x.Lift.Name)
        @Html.TextBoxFor(x => x.Lift.Name, new { @class = "form-control", autofocus = "autofocus", tabindex = 1 })
    </div>

    @Html.HiddenFor(x => x.Lift.UserId)
    @Html.HiddenFor(x => x.Lift.Id)
    <button type="submit" class="btn btn-outline-info" tabindex="2">Edit Lift</button>
}

<hr />
@Html.ActionLink("Back to Lifts", "Index", "Lifts", null, new { @class = "btn btn-outline-primary" })