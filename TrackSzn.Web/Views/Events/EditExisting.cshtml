@model TrackSzn.ViewModels.Events.EditViewModel

@{
    ViewBag.Title = $"Edit Event | {Model.Event.Name}";
    ViewBag.Description = "Use this page to edit the event listed below.";
}

@using (Html.BeginForm("Edit", "Events", FormMethod.Post, new { }))
{
    @Html.AntiForgeryToken()
    if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Any())
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <h3 class="alert-heading">Whoops.</h3>
            @Html.ValidationSummary(false, string.Empty, new { @class = "m-0" })
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="form-group">
        @Html.LabelFor(x => x.Event.Name)
        @Html.TextBoxFor(x => x.Event.Name, new { @class = "form-control", autofocus = "autofocus", tabindex = 1 })
    </div>

    @Html.HiddenFor(x => x.Event.UserId)
    @Html.HiddenFor(x => x.Event.Id)
    <button type="submit" class="btn btn-outline-info" tabindex="2">Edit Event</button>
}

<hr />
@Html.ActionLink("Back to Event List", "Index", "Events", null, new { @class = "btn btn-outline-primary" })