@model TrackSzn.ViewModels.Events.CreateViewModel

@{
    ViewBag.Title = "Create an Event";
}

<h2>Create an Event</h2>
<p>
    Use this page to create an event.
</p>

<hr />

@using (Html.BeginForm("Create", "Events", FormMethod.Post, new { }))
{
    @Html.AntiForgeryToken()
    if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Any())
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <h3 class="alert-heading">Whoops.</h3>
            @Html.ValidationSummary(false, string.Empty, new { @class = "m-0" })
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="form-group">
        @Html.LabelFor(x => x.Name)
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-outline-info">Create Event</button>
}

<hr />
@Html.ActionLink("Back to Event List", "Index", "Events", null, new { @class = "btn btn-outline-primary" })