@model TrackWorkout.ViewModels.Lifts.IndexViewModel

@{
    ViewBag.Title = "Athlete Lifts";
}

<h2>Athlete Lifts</h2>
<p>
    Use this page to navigate to specific athlete lifting information. Athletes are grouped by graduation year.
</p>

<hr />

<div class="card-deck">
    @foreach (var graduationYearGroup in Model.AthletesByGraduationYear)
    {
        <div class="card">
            <div class="card-header">
                @graduationYearGroup.Key
            </div>
            <ul class="list-group list-group-flush">
                @foreach (var athlete in graduationYearGroup)
                {
                    <li class="list-group-item">
                        @Html.ActionLink(athlete.Name, "Athlete", "Lifts", new { id = athlete.Id }, new { })
                    </li>
                }
            </ul>
        </div>
    }
</div>
